@using HouseKeeper.Models.Views.Employer;
@model PricePacketSettingViewModel;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Housekeeper Job</title>
    <link rel="stylesheet" href="/css/payment.css">
    <script src="/js/payment.js" defer></script>
    <style>
        /* CSS for link styled as button */
        .pay-btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #2AC53F;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s;
        }

            .pay-btn:hover {
                background-color: #0056b3;
            }

    </style>
    <style>
        #pricePacketId {
            display: none;
        }

        #recruitmentId {
            display: none;
        }
    </style>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#checkout").click(function () {
                var pricePacketId = parseFloat(document.getElementById('pricePacketId').innerText);
                var recruitmentId = parseInt(document.getElementById('recruitmentId').innerText);
                window.location.href = '/Employer/AddPricePacketCheckOut?recruitmentId=' + recruitmentId + '&pricePacketId=' + pricePacketId;
            });
        });
    </script>
    <partial name="HeaderInclude" />
</head>
<body>
    <partial name="BodyInclude" />
    <div id='pricePacketId'>@Model.PricePacketId</div>
    <div id='recruitmentId'>@Model.RecruitmentId</div>
    <div class='container'>
        <div class='window'>
            <div class='order-info'>
                <div class='order-info-content'>
                    <h2>Order Summary</h2>
                    <div class='line'></div>
                    <table class='order-table'>
                        <tbody>
                            <tr>
                                <td>
                                    <img src='https://dl.dropboxusercontent.com/s/qbj9tsbvthqq72c/Vintage-20L-Backpack-by-Fj%C3%A4llr%C3%A4ven.jpg'
                                         class='full-width'></img>
                                </td>
                                <td>

                                    <br> PricePacket Type: <span class='thin'>@Model.PricePacket.PricePacketName</span>
                                    <br> Number days: @Model.PricePacket.NumberDays<br>
                                </td>

                            </tr>
                            <tr>
                                <td>
                                    <div class='price'>@string.Format("{0:0,0} VND", @Model.PricePacket.Price)</div>
                                </td>
                            </tr>
                        </tbody>

                    </table>
                    <div class='line'></div>
                    <div class='total'>
                        <span style='float:right; text-align:right;'>
                            <div class='price'>TOTAL: @string.Format("{0:0,0} VND", @Model.PricePacket.Price)</div>
                        </span>
                    </div>
                </div>
            </div>
            <div class='credit-info'>
                <div class='credit-info-content'>
                    <table class='half-input-table'>
                        <tr>
                            <td>Please select your card: </td>
                            <td>
                                <div class='dropdown' id='card-dropdown'>
                                    <div class='dropdown-btn' id='current-card'>Visa</div>
                                    <div class='dropdown-select'>
                                        <ul>
                                            <li>Master Card</li>
                                            <li>American Express</li>
                                        </ul>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </table>
                    <img src='https://dl.dropboxusercontent.com/s/ubamyu6mzov5c80/visa_logo%20%281%29.png' height='80'
                         class='credit-card-image' id='credit-card-image'></img>
                    Card Number
                    <input class='input-field' value='4242424242424242'></input>
                    Card Holder
                    <input class='input-field' value='Nguyen Van A'></input>
                    <table class='half-input-table'>
                        <tr>
                            <td>
                                Expires
                                <input class='input-field' value='12/2025'></input>
                            </td>
                            <td>
                                CVC
                                <input class='input-field' value='369'></input>
                            </td>
                        </tr>
                    </table>
                    <button class='pay-btn' id="checkout">Check out</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

