<body>
    <partial name="BodyInclude" />
    <div class="container-xxl bg-white p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Navbar Start -->
        <nav class="navbar navbar-expand-lg bg-white navbar-light shadow sticky-top p-0">
            <a href="index.html" class="navbar-brand d-flex align-items-center text-center py-0 px-4 px-lg-5">
                <h1 class="m-0 text-primary">HouseKeeper</h1>
            </a>
            <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            @if (Model.Employee.IdentityState.IdentityStateId == 2)
            {
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav ms-auto p-4 p-lg-0">

                        <a href="@Url.Action("DisplayList", "Employee",1)" class="nav-item nav-link">Home</a>

                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Jobs</a>
                            <div class="dropdown-menu rounded-0 m-0">
                                <a href="@Url.Action("DisplayList", "Employee",1)" class="dropdown-item">Job List</a>
                                <a href="@Url.Action("GetAppliedRecruitment","Employee")" class="dropdown-item">Job you applied</a>
                                <a href="@Url.Action("ShowProposalJob","Employee")" class="dropdown-item">Job Proposals</a>
                            </div>
                        </div>

                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle active" data-bs-toggle="dropdown">Personal
                                @if (Model.Employee.Account.AvatarUrl != null)
                                {
                                    <img src="@Model.Employee.Account.AvatarUrl" alt="Avatar" style="width: 30px; height: 30px; border-radius: 50%; margin-right: 10px;">
                                }
                                else
                                {
                                    <img src="/images/Avatar.png" alt="Avatar" style="width: 30px; height: 30px; border-radius: 50%; margin-right: 10px;">
                                }
                            </a>
                            <div class="dropdown-menu rounded-0 m-0">
                                <a href="@Url.Action("Profile","Employee")" class="dropdown-item active">Your infor</a>
                                <a href="@Url.Action("ChangePassword", "Employee")" class="dropdown-item">Change password</a>
                                <a href="/Home/LogOut" class="dropdown-item">Log out</a>
                            </div>
                        </div>
                    </div>
                    <a href="" class="btn btn-primary rounded-0 py-4 px-lg-5 d-none d-lg-block">Search A Job<i class="fa fa-arrow-right ms-3"></i></a>
                </div>
            }
            else
            {
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav ms-auto p-4 p-lg-0">

                        <a href="@Url.Action("DisplayList", "Employee",1)" class="nav-item nav-link">Home</a>

                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle disabled" data-bs-toggle="dropdown">Jobs</a>
                            <div class="dropdown-menu rounded-0 m-0 disabled">
                                <a href="@Url.Action("DisplayList", "Employee",1)" class="dropdown-item disabled">Job List</a>
                                <a href="@Url.Action("GetAppliedRecruitment","Employee")" class="dropdown-item disabled">Job you applied</a>
                                <a href="@Url.Action("ShowProposalJob","Employee")" class="dropdown-item disabled">Job Proposals</a>
                            </div>
                        </div>

                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle active" data-bs-toggle="dropdown">Personal
                                <img src="/images/Avatar.png" alt="Avatar" style="width: 30px; height: 30px; border-radius: 50%; margin-right: 10px;">
                            </a>
                            <div class="dropdown-menu rounded-0 m-0">
                                <a href="@Url.Action("Profile","Employee")" class="dropdown-item active">Your infor</a>
                                <a href="@Url.Action("ChangePassword", "Employee")" class="dropdown-item disabled">Change password</a>
                                <a href="/Home/LogOut" class="dropdown-item">Log out</a>
                            </div>
                        </div>
                    </div>
                    <a href="@Url.Action("DisplayList", "Employee",1)" class="btn btn-primary rounded-0 py-4 px-lg-5 d-none d-lg-block disabled">Search A Job<i class="fa fa-arrow-right ms-3"></i></a>
                </div>
            }

        </nav>
        <!-- Navbar End -->
        <!-- Job Detail Start -->
        <div class="student-profile py-4">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4">
                        <div class="card shadow-sm">
                            <div class="card-header bg-transparent text-center">
                                @if(Model.Employee.Account.AvatarUrl==null)
                                {
                                    <img class="profile_img" src="~/images/Avatar.png" alt="student dp">
                                }
                                else
                                {
                                    <img class="profile_img" src=@Model.Employee.Account.AvatarUrl alt="student dp">
                                }
                                
                                <h3>@Model.Employee.LastName @Model.Employee.FirstName</h3>
                                @if (Model.Employee.IdentityState == null)
                                {
                                    <span class="badge text-bg-secondary">Need to authenticate information</span>
                                }
                                else if (Model.Employee.IdentityState.IdentityStateId == 1)
                                {
                                    <span class="badge text-bg-info">Waiting</span>
                                }
                                else if (Model.Employee.IdentityState.IdentityStateId == 2)
                                {
                                    <span class="badge text-bg-success">Approve</span>
                                }
                                else
                                {
                                    <span class="badge text-bg-danger">Disapprove</span>
                                }
                            </div>
                            <div class="card-body">
                                <p class="mb-0"><strong class="pr-1">City: </strong>@Model.Employee.District.City.CityName</p>
                                <p class="mb-0"><strong class="pr-1">District: </strong>@Model.Employee.District.DistrictName</p>
                                <p class="mb-0"><strong class="pr-1">Address: </strong>@Model.Employee.Address</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <div class="card shadow-sm">
                            <div class="card-header bg-transparent border-0">
                                <h3 class="mb-0"><i class="far fa-clone pr-1"></i>General Information</h3>
                            </div>
                            <div class="card-body pt-0">
                                <table class="table table-bordered">
                                    <tr>
                                        <th width="30%">First name</th>
                                        <td width="2%">:</td>
                                        <td>@Model.Employee.FirstName</td>
                                    </tr>
                                    <tr>
                                        <th width="30%">Last name</th>
                                        <td width="2%">:</td>
                                        <td>@Model.Employee.LastName</td>
                                    </tr>
                                    <tr>
                                        <th width="30%">Gender</th>
                                        <td width="2%">:</td>
                                        <td>@(Model.Employee.Gender == "male" ? "Male" : "Female")</td>
                                    </tr>
                                    <tr>
                                        <th width="30%">Birthday</th>
                                        <td width="2%">:</td>
                                        <td>@Model.Employee.BirthDate.Value.ToString("hh/MM/yyyy")</td>
                                    </tr>
                                    <tr>
                                        <th width="30%">Gmail</th>
                                        <td width="2%">:</td>
                                        <td>@Model.Employee.Account.Gmail</td>
                                    </tr>
                                    <tr>
                                        <th width="30%">Phone number</th>
                                        <td width="2%">:</td>
                                        <td>@Model.Employee.Account.PhoneNumber</td>
                                    </tr>
                                </table>
                                <a href="EditProfile" class="btn btn-primary">Edit</a>
                            </div>
                        </div>
                        <div style="height: 26px"></div>
                        <div class="card shadow-sm">
                            <div class="card-header bg-transparent border-0">
                                <h3 class="mb-0"><i class="far fa-clone pr-1"></i>Your jobs</h3>
                            </div>
                            <div class="card-body pt-0">
                                <div class="table-container">
                                    <table class="styled-table">
                                        <thead>
                                            <tr>
                                                <th>Job name</th>
                                                <th>Function</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Employee.JobDetails)
                                            {
                                                <tr>
                                                    <td>@item.Job.JobName</td>
                                                    <td>
                                                        <button class="btn btn-danger deleteButton btn_function" data-toggle="modal" data-target="#deleteWarningModal" value="DeleteJobDetail:@item.Job.JobId">Delete</button>
                                                    </td>
                                                </tr>
                                            }
                                            <tr>
                                                <td colspan="2">
                                                    <button class="btn btn-primary addJobButton" data-toggle="modal" data-target="#addJobModal">Add job you can do</button>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>

                        <div style="height: 26px"></div>
                        <div class="card shadow-sm">
                            <div class="card-header bg-transparent border-0">
                                <h3 class="mb-0"><i class="far fa-clone pr-1"></i>Your workable places</h3>
                            </div>
                            <div class="card-body pt-0">
                                <div class="table-container">
                                    <table class="styled-table">
                                        <thead>
                                            <tr>
                                                <th>WorkPlace</th>
                                                <th>Function</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Employee.WorkPlacesDetails)
                                            {
                                                <tr>
                                                    <td>@item.District.City.CityName \ @item.District.DistrictName</td>
                                                    <td>
                                                        <button class="btn btn-danger deleteButton btn_function" data-toggle="modal" data-target="#deleteWarningModal" value="DeleteDistrictDetail:@item.District.DistrictId">Delete</button>
                                                    </td>
                                                </tr>
                                            }
                                            <tr>
                                                <td colspan="2">
                                                    <button class="btn btn-primary addDistrictButton" data-toggle="modal" data-target="#addDistrictModal">Add places you can do </button>
                                                </td>
                                                
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>

                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Job Detail End -->
        <partial name="FooterPage" />
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>
    <partial name="Warning" />

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/wow/wow.min.js"></script>
    <script src="/lib/easing/easing.min.js"></script>
    <script src="/lib/waypoints/waypoints.min.js"></script>
    <script src="/lib/owlcarousel/owl.carousel.min.js"></script>
    <!-- Add Job modal -->
    <div class="modal fade" id="addJobModal" tabindex="-1" role="dialog" aria-labelledby="addJobModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addJobTypeModalLabel">Choose job you can do</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="newJobTypeName">Jobs:</label>
                        <select class="combo-box job_cmb">
                            @foreach (var job in Model.Jobs)
                            {
                                <option value="@job.JobId">@job.JobName</option>
                            }
                        </select>
                        
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-success" id="confirmAddJob">Choose that</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Add District modal -->
    <div class="modal fade" id="addDistrictModal" tabindex="-1" role="dialog" aria-labelledby="addDistrictModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addJobTypeModalLabel">Choose work place you can do</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="newJobTypeName">Cities/Districts:</label>
                        <select class="combo-box district_cmb">
                            @foreach (var district in Model.Districts)
                            {
                                <option value="@district.DistrictId">@district.City.CityName / @district.DistrictName</option>
                            }
                        </select>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-success" id="confirmAddDistrict">Choose that</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    <script src="/lib/wow/wow.min.js"></script>
    <script src="/lib/easing/easing.min.js"></script>
    <script src="/lib/waypoints/waypoints.min.js"></script>
    <script src="/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="/js/main.js"></script>
</body>

</html>


