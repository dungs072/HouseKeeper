@using HouseKeeper.Models.Views.Admin;
@model PaidTypeViewModel;
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Housekeeper Job</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">
    <partial name="LibraryHeaderInclude" />
    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Inter:wght@700;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/lib/animate/animate.min.css" rel="stylesheet">
    <link href="/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/css/style.css" rel="stylesheet">
    <style>
        .btn_function {
            margin-right: 10px; /* Adjust the value as needed */
        }
    </style>
    <partial name="HeaderInclude" />
    <script>
        $(document).ready(function () {
            // Handle OK button click
            $('#confirmEditJobType').on('click', function () {
                dataToPass = $('#confirmEditJobType').val();
                var jobName = $('#jobTypeName').val();
                var stringArray = dataToPass.split(':');
                if (stringArray[0] == 'EditJobType') {

                    var jobTypeId = parseInt(stringArray[1], 10);
                    var url = '/Admin/EditPaidType?paidTypeId=' + jobTypeId + '&paidTypeName=' + jobName;
                    window.location.href = url;
                }
            });
            $('#confirmAddJobType').on('click', function () {
                var jobName = $('#newJobTypeName').val();
                var url = '/Admin/AddPaidType?paidTypeName=' + jobName;
                window.location.href = url;
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            var dataToPass = "";
            
            $('.editButton').on('click', function () {
                dataToPass = $(this).val();
                var temp = dataToPass.split(':');
                var confirmEditButton = $(document).find('#confirmEditJobType');
                var jobNameButton = $(document).find('#jobTypeName');
                confirmEditButton.val(dataToPass);
                jobNameButton.val(temp[2]);

            });
        });
    </script>
</head>

<body>
    <partial name="BodyInclude" />
    <div class="container-xxl bg-white p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Navbar Start -->
        <partial name="Partial/AdminNav" />
        <!-- Navbar End -->
        <!-- Jobs Start -->
        <div class="container-xxl py-5">
            <div class="container">
                <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Paid Type</h1>
                <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.3s">
                    <!-- Search Bar-->
                    <div class="d-flex">
                        <input id="input-search" class="form-control me-2" type="search" placeholder="Search paid type name" aria-label="Search" value="@Model.QueryInput">
                        <a href="" id="btn-search" class="btn btn-outline-success me-2" type="submit">Search</a>
                        <button class="btn btn-secondary addButton py-1 px-5" data-toggle="modal" data-target="#addJobTypeModal" value="AddJobType">Add</button>
                    </div>
                    <div class="tab-content">
                        <div id="tab-1" class="tab-pane fade show p-0 active">
                            @foreach(var item in Model.PaidTypes)
                            {
                                <div class="job-item p-4 mb-4">
                                    <div class="row g-4">
                                        <div class="col-sm-12 col-md-8 d-flex align-items-center">
                                            <img class="flex-shrink-0 img-fluid border rounded" src="/Admin/PaidType.png" alt="" style="width: 80px; height: 80px;">
                                            <div class="text-start ps-4">
                                                <h5 class="mb-3">@item.SalaryFormName</h5>
                                            </div>
                                        </div>
                                        <div class="col-sm-12 col-md-4 d-flex flex-column align-items-start align-items-md-end justify-content-center">
                                            <div class="d-flex mb-3">
                                                
                                                @if(item.Recruitments.Count==0)
                                                {
                                                    <button class="btn btn-primary editButton btn_function" data-toggle="modal" data-target="#editJobTypeModal" value="EditJobType:@item.SalaryFormId:@item.SalaryFormName">Edit</button>
                                                    <button class="btn btn-danger deleteButton btn_function" data-toggle="modal" data-target="#deleteWarningModal" value="DeletePaidType:@item.SalaryFormId"><i class="fas fa-trash-alt"></i></button>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            <button class="btn btn-primary addButton py-3 px-5" data-toggle="modal" data-target="#addJobTypeModal" value="AddJobType">Add more Paid Type</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- Jobs End -->
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/wow/wow.min.js"></script>
    <script src="/lib/easing/easing.min.js"></script>
    <script src="/lib/waypoints/waypoints.min.js"></script>
    <script src="/lib/owlcarousel/owl.carousel.min.js"></script>
    <partial name="Warning" />
    <!-- Template Javascript -->
    <script src="/js/main.js"></script>

    <!-- Edit Modal -->
    <div class="modal fade" id="editJobTypeModal" tabindex="-1" role="dialog" aria-labelledby="editJobTypeModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editJobTypeModalLabel">Edit Paid Type Name</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="jobTypeName">New Paid Type Name:</label>
                        <input type="text" class="form-control" id="jobTypeName" placeholder="Enter New Name"
                               pattern="[A-Za-z ]+" title="Paid type contains letters and spaces only" maxlength="50">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-success" id="confirmEditJobType">Save Changes</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Modal -->
    <div class="modal fade" id="addJobTypeModal" tabindex="-1" role="dialog" aria-labelledby="addJobTypeModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addJobTypeModalLabel">Add New Paid Type</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="newJobTypeName">New Paid Type Name:</label>
                        <input type="text" class="form-control" id="newJobTypeName" placeholder="Enter New Name"
                               pattern="[A-Za-z ]+" title="Paid type contains letters and spaces only" maxlength="50">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-success" id="confirmAddJobType">Add Job Type</button>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/main.js"></script>
    <script>
        $(document).ready(function () {
            $('#input-search').on('input', function () {
                console.log($('#input-search').val())
                $('#btn-search').attr('href', 'ShowQueryPaidTypes?q=' + $('#input-search').val())
            });
        });
    </script>
</body>

</html>
