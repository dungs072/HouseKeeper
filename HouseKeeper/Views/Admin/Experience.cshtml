@using HouseKeeper.Models.Views.Admin;
@model ExperienceViewModel;
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>JobEntry - Job Portal Website Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Inter:wght@700;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/lib/animate/animate.min.css" rel="stylesheet">
    <link href="/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/css/style.css" rel="stylesheet">
    <style>
        .btn_function {
            margin-right: 10px; /* Adjust the value as needed */
        }
    </style>
    <partial name="HeaderInclude" />
    <script>
        $(document).ready(function () {
            // Handle OK button click
            $('#confirmEditJobType').on('click', function () {
                dataToPass = $('#confirmEditJobType').val();
                var jobName = $('#jobTypeName').val();
                var stringArray = dataToPass.split(':');
                if (stringArray[0] == 'EditJobType') {

                    var jobTypeId = parseInt(stringArray[1], 10);
                    var url = '/Admin/EditExperience?experienceId=' + jobTypeId + '&experienceName=' + jobName;
                    window.location.href = url;
                }
            });
            $('#confirmAddJobType').on('click', function () {
                var jobName = $('#newJobTypeName').val();
                var url = '/Admin/AddExperience?experienceName=' + jobName;
                window.location.href = url;
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            var dataToPass = "";
            
            $('.editButton').on('click', function () {
                dataToPass = $(this).val();
                var temp = dataToPass.split(':');
                var confirmEditButton = $(document).find('#confirmEditJobType');
                var jobNameButton = $(document).find('#jobTypeName');
                confirmEditButton.val(dataToPass);
                jobNameButton.val(temp[2]);

            });
        });
    </script>
</head>

<body>
    <partial name="BodyInclude" />
    <div class="container-xxl bg-white p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Navbar Start -->
        <nav class="navbar navbar-expand-lg bg-white navbar-light shadow sticky-top p-0">
            <a href="index.html" class="navbar-brand d-flex align-items-center text-center py-0 px-4 px-lg-5">
                <h1 class="m-0 text-primary">HouseKeeper</h1>
            </a>
            <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto p-4 p-lg-0">
                    <a href="index.html" class="nav-item nav-link active">Home</a>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Statistics</a>
                        <div class="dropdown-menu rounded-0 m-0">
                            <a href="/Admin/ShowJobType" class="dropdown-item">Users</a>
                            <a href="/Admin/DrawChart" class="dropdown-item">Revenue</a>
                        </div>
                    </div>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Job</a>
                        <div class="dropdown-menu rounded-0 m-0">
                            <a href="/Admin/ShowJobType" class="dropdown-item">Job Type</a>
                            <a href="/Admin/ShowPaidType" class="dropdown-item">Paid Type</a>
                            <a href="/Admin/ShowExperience" class="dropdown-item">Experience</a>
                        </div>
                    </div>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Other</a>
                        <div class="dropdown-menu rounded-0 m-0">
                            <a href="/Admin/ShowRejection" class="dropdown-item">Rejection</a>
                            <a href="/Admin/ShowPricePackets" class="dropdown-item">Price Packet</a>
                            <a href="job-detail.html" class="dropdown-item">City/District</a>
                        </div>
                    </div>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Personal</a>
                        <div class="dropdown-menu rounded-0 m-0">
                            <a href="@Url.Action("ChangePassword", "Admin")" class="dropdown-item">Change password</a>
                            <a href="/Home/LogOut" class="dropdown-item">Log out</a>
                        </div>
                    </div>
                </div>
                <a href="" class="btn btn-primary rounded-0 py-4 px-lg-5 d-none d-lg-block">Still dont know<i class="fa fa-arrow-right ms-3"></i></a>
            </div>
        </nav>
        <!-- Navbar End -->
        <!-- Jobs Start -->
        <div class="container-xxl py-5">
            <div class="container">
                <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Experience</h1>
                <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.3s">
                    <div class="tab-content">
                        <div id="tab-1" class="tab-pane fade show p-0 active">
                            @foreach(var item in Model.Experiences)
                            {
                                <div class="job-item p-4 mb-4">
                                    <div class="row g-4">
                                        <div class="col-sm-12 col-md-8 d-flex align-items-center">
                                            <img class="flex-shrink-0 img-fluid border rounded" src="/img/com-logo-1.jpg" alt="" style="width: 80px; height: 80px;">
                                            <div class="text-start ps-4">
                                                <h5 class="mb-3">@item.ExperienceName</h5>
                                            </div>
                                        </div>
                                        <div class="col-sm-12 col-md-4 d-flex flex-column align-items-start align-items-md-end justify-content-center">
                                            <div class="d-flex mb-3">
                                                <button class="btn btn-primary editButton btn_function" data-toggle="modal" data-target="#editJobTypeModal" value="EditJobType:@item.ExperienceId:@item.ExperienceName">Edit</button>
                                                @if(item.Recruitments.Count==0)
                                                {
                                                    <button class="btn btn-danger deleteButton btn_function" data-toggle="modal" data-target="#deleteWarningModal" value="DeleteExperience:@item.ExperienceId"><i class="fas fa-trash-alt"></i></button>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            <button class="btn btn-primary addButton py-3 px-5" data-toggle="modal" data-target="#addJobTypeModal" value="AddJobType">Add more Experience</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- Jobs End -->
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/wow/wow.min.js"></script>
    <script src="/lib/easing/easing.min.js"></script>
    <script src="/lib/waypoints/waypoints.min.js"></script>
    <script src="/lib/owlcarousel/owl.carousel.min.js"></script>
    <partial name="Warning" />
    <!-- Template Javascript -->
    <script src="/js/main.js"></script>

    <!-- Edit Modal -->
    <div class="modal fade" id="editJobTypeModal" tabindex="-1" role="dialog" aria-labelledby="editJobTypeModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editJobTypeModalLabel">Edit Experience Name</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="jobTypeName">New Experience Name:</label>
                        <input type="text" class="form-control" id="jobTypeName" placeholder="Enter New Name">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-success" id="confirmEditJobType">Save Changes</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Modal -->
    <div class="modal fade" id="addJobTypeModal" tabindex="-1" role="dialog" aria-labelledby="addJobTypeModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addJobTypeModalLabel">Add New Job Type</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="newJobTypeName">New Experience Name:</label>
                        <input type="text" class="form-control" id="newJobTypeName" placeholder="Enter New Name">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-success" id="confirmAddJobType">Add Job Type</button>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
