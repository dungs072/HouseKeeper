     <script>
        $(document).ready(function () {
            // Handle OK button click
            $('#confirmCancel').on('click', function () {
                dataToPass = $('#confirmCancel').val();
                var stringArray = dataToPass.split(':');
                if (stringArray[0] == 'CancelApply') {

                    var recruitmentId = parseInt(stringArray[1], 10);
                    var applyDetailId = parseInt(stringArray[2], 10);
                    var state = stringArray[3];
                    if (state == 'listpage') {
                        var url = '/Employee/CancelApplyJob?recruitmentId=' + recruitmentId + '&applyDetailId=' + applyDetailId + '&isList='+true;
                    }
                    else {
                        var url = '/Employee/CancelApplyJob?recruitmentId=' + recruitmentId + '&applyDetailId=' + applyDetailId+'&isList=' + false;
                    }
                   
                    window.location.href = url;
                }

            });
        });
    </script>
