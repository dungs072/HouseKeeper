<head>
    <script>
        $(document).ready(function () {
            // Handle OK button click
            $('#confirmDelete').on('click', function () {
                dataToPass = $('#confirmDelete').val();
                var stringArray = dataToPass.split(':');
                if (stringArray[0] == 'DeletePendingRecruitment') {

                    var recruitmentId = parseInt(stringArray[1], 10);

                    var url = '/Employer/DeleteRecruitment?recruitmentId=' + recruitmentId;
                    window.location.href = url;
                }
                if (stringArray[0] == 'HideOnlineRecruitment') {

                    var recruitmentId = parseInt(stringArray[1], 10);

                    var url = '/Employer/HideRecruitment?recruitmentId=' + recruitmentId;
                    window.location.href = url;
                }
                if (stringArray[0] == 'DeleteJobType') { 
                    var jobTypeId = parseInt(stringArray[1], 10);

                    var url = '/Admin/DeleteJobType?jobId=' + jobTypeId;
                    window.location.href = url;
                }
                if (stringArray[0] == 'DeletePaidType') {
                    var paidTypeId = parseInt(stringArray[1], 10);

                    var url = '/Admin/DeletePaidType?paidTypeId=' + paidTypeId;
                    window.location.href = url;
                }
                if (stringArray[0] == 'DeleteExperience') {
                    var expId = parseInt(stringArray[1], 10);

                    var url = '/Admin/DeleteExperience?experienceId=' + expId;
                    window.location.href = url;
                }
                if (stringArray[0] == 'DeleteRejection') {
                    var rejectionId = parseInt(stringArray[1], 10);

                    var url = '/Admin/DeleteRejection?rejectionId=' + rejectionId;
                    window.location.href = url;
                }
                if (stringArray[0] == 'DeletePricePacket') {
                    var pricePacketId = parseInt(stringArray[1], 10);

                    var url = '/Admin/DeletePricePacket?pricePacketId=' + pricePacketId;
                    window.location.href = url;
                }
                if (stringArray[0] == 'DeleteJobDetail') {
                    var jobId = parseInt(stringArray[1], 10);

                    var url = '/Employee/DeleteJob?jobId=' + jobId;
                    window.location.href = url;
                }
                if (stringArray[0] == 'DeleteDistrictDetail') {
                    var districtId = parseInt(stringArray[1], 10);

                    var url = '/Employee/DeleteDistrict?districtId=' + districtId;
                    window.location.href = url;
                }
                if (stringArray[0] == 'DeleteCity') {
                    var cityId = parseInt(stringArray[1], 10);

                    var url = '/Admin/DeleteCity?cityId=' + cityId;
                    window.location.href = url;
                }
                if (stringArray[0] == 'DeleteDistrict') {
                    var districtId = parseInt(stringArray[1], 10);
                    var cityId = parseInt(stringArray[2], 10);

                    var url = '/Admin/DeleteDistrict?districtId=' + districtId + '&cityId=' + cityId;
                    window.location.href = url;
                }

            });
        });
    </script>
