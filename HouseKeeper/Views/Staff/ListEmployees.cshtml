@using HouseKeeper.Models.Views.Staff;
@model EmployeesModerationViewModel;
<!DOCTYPE html>
<html lang="en">

<head>
    <partial name="DefaultHeaderInclude" />
    <partial name="LibraryHeaderInclude" />
    <title>Housekeeper Job</title>
    <style>
        .badge {
            padding: 5px 10px;
            border-radius: 4px;
            font-weight: bold;
        }

        .text-bg-secondary {
            background-color: #6c757d; /* Example color */
            color: #fff; /* Text color */
        }

        .text-bg-info {
            background-color: #17a2b8; /* Example color */
            color: #fff; /* Text color */
        }

        .text-bg-success {
            background-color: #28a745; /* Example color */
            color: #fff; /* Text color */
        }

        .text-bg-danger {
            background-color: #dc3545; /* Example color */
            color: #fff; /* Text color */
        }

        td {
            vertical-align: middle;
        }

        .btn-add {
            margin-top: 7px;
            margin-bottom: 7px;
        }

        .search-bar {
            margin-top: 7px;
            margin-bottom: 7px;
        }

        #btn-search {
            align-content: center;
        }

        #identityStatus {
            margin-right: 7px;
        }

        #identityStatus {
            width: 200px;
        }

    </style>
    <partial name="HeaderInclude" />
</head>

<body>
    <partial name="BodyInclude" />
    <div class="container-xxl bg-white p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Navbar Start -->
        <partial name="Partial/StaffNav" />
        <!-- Navbar End -->
        <!-- Jobs Start -->
        <div class="container-xxl py-5">
            <div class="container">
                <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">List Employees</h1>

                <!-- Search Bar-->
                <div class="d-flex search-bar">
                    <input id="input-search" class="form-control me-2" type="search" placeholder="Search" aria-label="Search" value="@Model.QueryInput"> 
                    <div id="identityStatus" class="form-floating">
                        <select class="form-select" id="identityStatusSelect" name="sellist">
                            <option value="0">All</option>
                            @foreach(var item in Model.IdentityStatus)
                            {
                                <option value="@item.IdentityStateId">@item.IdentityStateName</option>
                            })
                        </select>
                        <label for="identityStatusSelect" class="form-label">Identity Status:</label>
                    </div>
                    <a href="ShowListEmployees?q=@Model.QueryInput&identityStatus=@Model.currentIdentityStatus" id="btn-search" class="btn btn-outline-success" type="submit">Search</a>
                </div>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Last Name</th>
                            <th>First Name</th>
                            <th>Citizen Number</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Identity Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var employee in Model.Employees)
                        {
                            <tr>
                                <td>@employee.EmployeeId</td>
                                <td>@employee.LastName</td>
                                <td>@employee.FirstName</td>
                                <td>@employee.Identity.CitizenNumber</td>
                                <td>@employee.Account.PhoneNumber</td>
                                <td>@employee.Account.Gmail</td>
                                <td class="col-1">
                                    @if (employee.IdentityState.IdentityStateId == 1)
                                    {
                                        <span class="badge text-bg-info">Waiting</span>
                                    }
                                    else if (employee.IdentityState.IdentityStateId == 2)
                                    {
                                        <span class="badge text-bg-success">Approve</span>
                                    }
                                    else
                                    {
                                        <span class="badge text-bg-danger">Disapprove</span>
                                    }
                                </td>
                                <td class="col-1">
                                    <a style="width:100%;" class="btn btn-info btn_function" href="ShowEmployeeDetail?employeeId=@employee.EmployeeId">Detail</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- Jobs End -->
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/wow/wow.min.js"></script>
    <script src="/lib/easing/easing.min.js"></script>
    <script src="/lib/waypoints/waypoints.min.js"></script>
    <script src="/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="/js/main.js"></script>

    <script>
        // set default value for select
        $('#identityStatusSelect').val('@Model.currentIdentityStatus');
        
        $(document).ready(function () {
            var inputQuery = '@Model.QueryInput';
            var identityStatus = '@Model.currentIdentityStatus';
            $('#input-search').on('input', function () {
                inputQuery = $('#input-search').val();
                $('#btn-search').attr('href', 'ShowListEmployees?q=' + inputQuery + '&identityStatus=' + identityStatus);
            });

            $('#identityStatusSelect').on('change', function () {
                identityStatus = $('#identityStatusSelect').val();
                $('#btn-search').attr('href', 'ShowListEmployees?q=' + inputQuery + '&identityStatus=' + identityStatus);
            });
        });
    </script>
</body>

</html>
